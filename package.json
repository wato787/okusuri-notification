{
  "name": "okusuri-notification",
  "version": "1.0.0",
  "description": "通知を送信するためのサービス",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "bundle:lambda": "node scripts/bundle-lambda.js",
    "build:lambda": "bun run build && bun run bundle:lambda",
    "terraform:init": "cd terraform && terraform init",
    "terraform:plan": "cd terraform && terraform plan",
    "terraform:apply": "cd terraform && terraform apply -auto-approve",
    "deploy:lambda": "bun run build:lambda && bun run terraform:apply"
  },
  "dependencies": {
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^20.0.0",
    "@types/web-push": "^3.6.4",
    "archiver": "^7.0.1",
    "typescript": "^5.0.0"
  }
}
